@model WebApplication7.Models.ADVISOR

@{
    ViewBag.Title = "Create";

}

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
<div class="cover border border-success p-2 mb-2">
   
    <div class="form-horizontal  ">
        <div>
            <h5 style="margin-left:50px"> register new advisor </h5>
        </div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div style="color:red">
        @TempData["create"]

    </div>
        <text>
            first name:
        </text>
        <div class="form-group" id="formgroup">

            <div class="col-md-10">
                @Html.TextBoxFor(model => model.AFNAME, new { @class = "form-control", Type = "text", placeholder = "first name" })
                @Html.ValidationMessageFor(model => model.AFNAME, "", new { @class = "text-danger" })
            </div>
        </div>
        <text>last name:</text>
        <div class="form-group" id="formgroup">

            <div class="col-md-10">
                @Html.TextBoxFor(model => model.ALNAME, new { @class = "form-control", Type = "text", placeholder = "Last Name" })
                @Html.ValidationMessageFor(model => model.ALNAME, "", new { @class = "text-danger" })
            </div>
        </div>
        <text>
            phone number:
        </text>
        <div class="form-group" id="formgroup">

            <div class="col-md-10">

                @Html.TextBoxFor(m => m.PHONE, new { @class = "form-control", type = "tel", placeholder = "Phone number", minlength = "10", maxlength = "10" })

            </div>
        </div>
        <text>
            Email:
            <text>
                <div class="form-group" id="formgroup">

                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.EMAIL, new { @class = "form-control", type = "email", placeholder = "Email" })
                        @Html.ValidationMessageFor(model => model.EMAIL, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group" id="formgroup">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="register" class="btn btn-success" />
                    </div>
                </div>
</div>
</div>

}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
