@model WebApplication7.Models.DEVELOPER

@{
    ViewBag.Title = "Create";
}

<head>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</head>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
<div class="cover border border-success p-2 mb-2">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-horizontal ">

        <hr />

        <div style="color:red">
            @TempData["create1"]

        </div>
        <div class="form-group" id="developerform">
            <text>
                Advisor Name:
                <text>
                    <div class="col-md-10" id="formgroup">
                        @Html.DropDownList("AID", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.AID, "", new { @class = "text-danger" })
                    </div>
        </div>

        <div class="form-group" id="developerform">
            <text>
                first name:
            </text>
            <div class="col-md-10" id="formgroup">
                @Html.TextBoxFor(model => model.FNAME, new { @class = "form-control", Type = "text", placeholder = "first name" })
                @Html.ValidationMessageFor(model => model.FNAME, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" id="developerform">
            <text>last name:</text>
            <div class="col-md-10" id="formgroup">
                @Html.TextBoxFor(model => model.LNAME, new { @class = "form-control", type = "text", placeholder = "last name" })
                @Html.ValidationMessageFor(model => model.LNAME, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" id="developerform">
            <text>
                phone number:
            </text>
            <div class="col-md-10" id="formgroup">
                @Html.TextBoxFor(model => model.PHONE, new { @class = "form-control", type = "tel", placeholder = "Phone Number", minlength = "10", maxlength = "10" })
                @Html.ValidationMessageFor(model => model.PHONE, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" id="developerform">
            <text>
                Email:
                <text>
                    <div class="col-md-10" id="formgroup">
                        @Html.TextBoxFor(model => model.EMAIL, new { @class = "form-control", type = "email", placeholder = "Email" })
                        @Html.ValidationMessageFor(model => model.EMAIL, "", new { @class = "text-danger" })
                    </div>
        </div>

        <div class="form-group" id="developerform">
            <text>
                Project Title:
                <text>
                    <div class="col-md-10" id="formgroup">
                        @Html.DropDownList("pid",null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.pid, "", new { @class = "text-danger" })
                    </div>
        </div>

        <div class="form-group" id="developerform">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="register" class="btn btn-success" />
            </div>
        </div>
    </div>
</div>

    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
